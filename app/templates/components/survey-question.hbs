<a {{bind-attr name=question.id}} />
<div class="question" {{action "toggleResults"}}>
  <span {{bind-attr class=":expand showYearlyResults:open:closed"}}></span>
  <h3>
    {{question.content}}
  </h3>
</div>
<a {{bind-attr href="permalink"}} class='ion-link'></a>
{{#if showYearlyResults}}
  <table>
    <thead>
      <tr>
        <th> </th>
        {{#each year in question.yearsAsked}}
          <th>{{year}}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
      {{#each answer in question.answers}}
        <tr>
          <td>{{answer.content}}</td>

          {{#each summary in answer.yearSummaryAnswers}}
            <td>
              {{answer-summary summary=summary}}
            </td>
          {{/each}}
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
{{/if}}
