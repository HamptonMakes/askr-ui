{{#each year in model.years}}
  <h2 class="slds-text-heading--medium slds-m-bottom--medium">Questions first asked in: {{year.year}}</h2>
  <div class="survey-questions slds-tree_container">
    <ul class="slds-tree" role="tree" area-labelldby="treeheading">
      {{#each question in year.questions}}
        <li class="survey-question" role="treeitem" aria-level="1" aria-expanded="false">
          {{survey-question question=question}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/each}}
